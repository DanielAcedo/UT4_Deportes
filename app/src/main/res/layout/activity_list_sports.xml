<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_sports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danielacedo.deportes.ListSports">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txv_ListInfo"
        android:id="@+id/txv_ListInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listActivity_Button_Top_Margin"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_Confirm"
        android:id="@+id/btn_btn_Confirm"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/listActivity_Separator_Top_Margin"
        android:background="@color/colorSeparator"
        android:layout_height="2dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/lv_Sports"></ListView>
</LinearLayout>
